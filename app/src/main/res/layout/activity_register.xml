<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#202020"
    tools:context=".Profile">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"

        android:layout_height="40dp"


        android:fontFamily="monospace"

        android:lineSpacingExtra="14sp"
        android:text="Enter new user"
        android:textAlignment="center"
        android:textColor="#EC1C53"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/reg_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/reg_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="Insert Your Acoount"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:shadowColor="#FDFDFE"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FDFDFE"
        android:textColorLink="#FFFFFF"

        app:layout_constraintBottom_toTopOf="@+id/reg_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/reg_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="Insert Your Acoount"
        android:hint="Name"
        android:inputType="textCapWords"
        android:maxLength="25"
        android:shadowColor="#FDFDFE"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FDFDFE"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/reg_surname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_password" />

    <EditText
        android:id="@+id/reg_surname"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="Insert Your Acoount"
        android:hint="Surname"
        android:inputType="text"
        android:maxLength="25"
        android:shadowColor="#FDFDFE"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FDFDFE"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/reg_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_name" />

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="Insert Your Acoount"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="15"
        android:shadowColor="#FDFDFE"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FDFDFE"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/reg_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_email" />

    <EditText
        android:id="@+id/reg_nickname"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="Insert Your Acoount"
        android:hint="Nickname"
        android:inputType="text"
        android:shadowColor="#FDFDFE"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FDFDFE"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/reg_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_surname" />

    <EditText
        android:id="@+id/reg_address"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="Insert Your Acoount"
        android:hint="Address"
        android:inputType="text"
        android:shadowColor="#FDFDFE"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FDFDFE"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/reg_cellphone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_nickname" />

    <EditText
        android:id="@+id/reg_cellphone"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="Insert Your Acoount"
        android:hint="Cell phone number"
        android:shadowColor="#FDFDFE"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FDFDFE"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/register_new"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_address" />

    <Button
        android:id="@+id/register_new"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:background="@drawable/button"


        android:fontFamily="monospace"
        android:text="REGISTER"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>