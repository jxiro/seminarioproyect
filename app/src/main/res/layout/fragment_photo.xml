<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202020"
    android:orientation="vertical"
    tools:context=".Fragments.Photo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cargarImagen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/vistaImagenInsertar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            tools:srcCompat="@drawable/casa" />
    </ScrollView>

    <Button
        android:id="@+id/cargarImagen"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button"
        android:color="#ec1c53"
        android:fontFamily="monospace"
        android:shadowColor="#FFFFFF"
        android:text="LOAD ONE"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/insertarImagen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/insertarImagen"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:color="#ec1c53"
        android:fontFamily="monospace"
        android:text="SAVE"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>